<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:clickable="false"
            android:background="@drawable/background_profile_trends">


            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:background="@drawable/bg_active_rounded">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Videos"
                    android:textSize="15sp"
                    android:textColor="@color/colorMoment"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="23sp"
                    android:id="@+id/num_videos"/>

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_profile_trends">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/background_profile_trends"
            android:clickable="false"

            android:layout_marginStart="15dp">
            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:id="@+id/followers"
                android:background="@drawable/bg_active_rounded"
                android:layout_marginStart="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Followers"
                    android:textSize="15sp"
                    android:textColor="@color/colorMoment"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="22dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="23sp"
                    android:id="@+id/num_followers"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:clickable="false"
                android:id="@+id/following"
                android:background="@drawable/bg_active_rounded">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Following"
                    android:textSize="15sp"
                    android:textColor="@color/colorMoment"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="22dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="23sp"
                    android:id="@+id/num_following"/>

            </RelativeLayout>


        </LinearLayout>







    </LinearLayout>

</RelativeLayout>