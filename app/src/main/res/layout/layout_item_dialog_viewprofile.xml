<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_more"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_item_dialog_more"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report the video ?"
            android:layout_centerInParent="true"
            android:textColor="@color/colorMoment"
            android:fontFamily="@font/nunito_regular"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report for nudity / -18 content "
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_regular"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/item2"
        android:layout_height="50dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report for harassment or bullying"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_regular"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item3"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report for content with drugs"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_regular"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/item4"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report for violent or disturbing content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_regular"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>



</LinearLayout>

